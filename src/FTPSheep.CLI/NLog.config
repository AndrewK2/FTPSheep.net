<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}/logs/internal-nlog.txt">

  <!-- Enable ASP.NET Core layout renderers -->
  <extensions>
    <add assembly="NLog.Extensions.Logging"/>
  </extensions>

  <!-- Define variables for reuse -->
  <variable name="logDirectory" value="${basedir}/logs"/>
  <variable name="briefLayout" value="${time} [${uppercase:${level}}] ${message} ${exception:format=tostring}"/>
  <variable name="verboseLayout" value="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception:format=tostring}"/>

  <!-- Define targets to write to -->
  <targets>
    <!-- Console target with colored output -->
    <target xsi:type="Console"
            name="console"
            layout="${briefLayout}"
            detectConsoleAvailable="true">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <!-- File target for all logs -->
    <target xsi:type="File"
            name="allfile"
            fileName="${logDirectory}/ftpsheep-${shortdate}.log"
            layout="${verboseLayout}"
            archiveFileName="${logDirectory}/archives/ftpsheep-${shortdate}.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- File target for errors only -->
    <target xsi:type="File"
            name="errorfile"
            fileName="${logDirectory}/ftpsheep-errors-${shortdate}.log"
            layout="${verboseLayout}"
            archiveFileName="${logDirectory}/archives/ftpsheep-errors-${shortdate}.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />
  </targets>

  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- Skip Microsoft logs unless they're warnings or errors -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- All logs go to file -->
    <logger name="*" minlevel="Debug" writeTo="allfile" />

    <!-- Errors and above go to error file -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- Info and above go to console (Debug only in verbose mode) -->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>
