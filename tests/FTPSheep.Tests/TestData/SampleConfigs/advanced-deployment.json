{
  "$schema": "https://ftpsheep.net/schemas/profile.json",
  "name": "Advanced Production Deployment",
  "connection": {
    "host": "ftp.production.example.com",
    "port": 21,
    "protocol": "Ftp",
    "timeoutSeconds": 300,
    "connectionMode": "Passive",
    "useSsl": false,
    "validateSslCertificate": true
  },
  "username": "deploy_user",
  "encryptedPassword": null,
  "remotePath": "/var/www/myapp",
  "projectPath": "C:\\Projects\\MyWebApp\\MyWebApp.csproj",
  "build": {
    "configuration": "Release",
    "targetFramework": "net8.0",
    "runtimeIdentifier": null,
    "selfContained": null,
    "additionalProperties": {
      "PublishTrimmed": "false",
      "PublishSingleFile": "false"
    }
  },
  "concurrency": 8,
  "retryCount": 3,
  "exclusionPatterns": [
    "*.log",
    "*.tmp",
    "App_Data/**",
    "uploads/**",
    "logs/**",
    "*.config.local"
  ],
  "cleanupMode": "DeleteObsolete",
  "appOfflineEnabled": true
}
